# Database Configuration
DATABASE_URL=sqlite:///ecommerce.db  # Use SQLite for development

# JWT Configuration
JWT_SECRET_  # Use a strong, random key
JWT_ACCESS_TOKEN_EXPIRES=3600  # Token expiration in seconds (1 hour)

# Flask Configuration
SECRET_KEY=your-flask-secret-key  # Required for Flask session management
DEBUG=True  # Set to False in production

# CORS Configuration (optional)
CORS_ORIGINS=*  # Allow all origins (restrict in production)

# Server Configuration (optional)
FLASK_HOST=127.0.0.1  # Bind to localhost
FLASK_PORT=5000  # Default port

# Email Configuration (optional, for future use)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# File Upload Configuration (optional, for future use)
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB file size limit